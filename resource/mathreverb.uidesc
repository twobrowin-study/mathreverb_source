<?xml version="1.0" encoding="UTF-8"?>
<vstgui-ui-description version="1">

	<!-- Секция представлений -->
	<template name="view" class="CViewContainer" bitmap="background" size="650, 400">
		<!-- Название --> <view class="CTextLabel" title="Mathematic Reverberator" transparent="true" size="650, 28" origin="0, 10" font="~ NormalFontVeryBig"/>
		<!-- Измеритель выходной громкости --> <view class="CVuMeter" control-tag="VuPPM" bitmap="vu_on" off-bitmap="vu_off" size="27, 234" origin="613, 42"/>

		<!-- Блок графического вывода геометрии помещения, положений источника и приёмника -->
		<view class="CViewContanier" size="593, 200" origin="10, 42">
		</view>

		<!-- Блок ввода параметров виртуального помещения, характеризующих его геометрическую конфигурацию -->
		<view class="CViewContanier" transparent="true" size="260, 138" origin="10, 252">
			<!-- Блок переменной длины -->
			<view class="CViewContanier" size="150, 46" origin="0, 0">
				<view class="CAnimKnob" control-tag="Length" bitmap="knob_gi" height-of-one-image="30" sub-pixmaps="80" size="30, 30" origin="60, 0"/>
				<view class="CTextLabel" title="Length:" text-alignment="right" transparent="true" size="40, 14" origin="15, 32"/>
				<view class="CTextEdit" control-tag="Length" transparent="true" size="40, 14" origin="55, 32"/>
				<view class="CTextLabel" title="m" text-alignment="left" transparent="true" size="40, 14" origin="95, 32"/>
			</view>
		</view>

		<!-- Блок ввода параметров, характеризующих положения в виртуальном помещении источника и приёмника сигнала -->
		<view class="CViewContanier" size="200, 138" origin="280, 252">
		</view>

		<!-- Блок ввода параметра степени отражения сигнала от стен виртуального помещения -->
		<view class="CViewContanier" size="113, 40" origin="490, 252">
		</view>

		<!-- Блок ввода дополнительного параметра громкости выходного сигнала, измеряемой в дБ -->
		<view class="CViewContanier" transparent="true" size="150, 88" origin="490, 302">
			<view class="CAnimKnob" control-tag="Gain" bitmap="knob_gain" height-of-one-image="56" sub-pixmaps="80" size="56, 56" origin="47, 0"/>
			<view class="CTextLabel" title="Gain:" text-alignment="right" transparent="true" size="40, 28" origin="15, 60"/>
			<view class="CTextEdit" control-tag="Gain" transparent="true" size="40, 28" origin="55, 60"/>
			<view class="CTextLabel" title="dB" text-alignment="left" transparent="true" size="40, 28" origin="95, 60"/>
		</view>
	</template>

	<!-- Секция изображений (изображения определяются в mathreverb.rc) -->
	<bitmaps>
		<bitmap name="background" path="background.png"/>
		<bitmap name="vu_off" path="vu_off.png"/>
		<bitmap name="vu_on" path="vu_on.png"/>
		<bitmap name="knob_gi" path="knob_gi.png"/>
		<bitmap name="knob_gain" path="knob_gain.png"/>
	</bitmaps>

	<!-- Секция тегов (управления) -->
	<control-tags>
		<control-tag name="VuPPM" tag="0"/>
		<control-tag name="Gain" tag="1"/>
	</control-tags>

	<!-- Секция шрифтов -->
	<fonts>
	</fonts>

	<!-- Секция цветов -->
	<colors>
	</colors>

</vstgui-ui-description>
